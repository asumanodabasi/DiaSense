@{
    ViewData["Title"] = "Şifre Sıfırlama";
}



<div class="col-md-4 ms-auto me-auto" style="padding-top:50px;">

    <div class="box">
        <div class="card-header">
            <h3 style="font-family:Arial,sans-serif;">Şifre Sıfırlama</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div>
                    <label>E-posta Adresi:</label>
                    <input type="email" name="email" required />
                </div>
                <div class="float-start text-white p-2">
                <button type="submit" class="btn btn-outline-danger">Şifre Sıfırlama Bağlantısı Gönder</button>
                </div>
            </form>
            </div>
</div>
</div>


@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
